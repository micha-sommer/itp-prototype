        <td colspan="4">16. Internationales Trainings Camp 2020 Bad Blankenburg</td>
    </tr>
    <tr>
        <td colspan="4"></td>
    </tr>
    <tr>
        <td style="border-bottom: 1px solid black; width: 45%"><b>Position</b></td>
        <td style="border-bottom: 1px solid black; width: 15%" align="right"><b>Einzelpreis</b></td>
        <td style="border-bottom: 1px solid black; width: 12%" align="right"><b>Personen</b></td>
        <td style="border-bottom: 1px solid black; width: 28%" align="right"><b>Gesamtpreis</b></td>
    </tr>
    {% for position in invoice.invoicePositions %}
        <tr>
            <td style="width: 45%"> {{ position.item.description }} </td>
            <td style="width: 15%" align="right"> {{ position.item.amountEuro|number_format(2,',','.') }} €</td>
            <td style="width: 12%" align="right"> {{ position.multiplier|number_format(0,',','.') }} </td>
            <td style="width: 28%" align="right">{{ position.isAdd ? "" : "-" }} {{ (position.totalEuro/100)|number_format(2,',','.') }} €</td>
        </tr>
    {% endfor %}
    <tr>
        <td style="border-bottom: 1px solid black;" colspan="4"></td>
    </tr>
    <tr>
        <td colspan="4"></td>
    </tr>
    <tr>
        <td style="width: 45%"></td>
        <td style="width: 15%"></td>
        <td style="border: 1px solid black; width: 12%"><b>Gesamt:</b></td>
        <td style="border: 1px solid black; width: 28%; text-align: right"><b>{{ (invoice.totalEuro/100)|number_format(2,',','.') }}
                €</b></td>
    </tr>
    <tr>
