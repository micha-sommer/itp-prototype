        <td colspan="4"></td>
    </tr>
    <tr>
        <td align="right" colspan="4">Erfurt, {{ "now"|date("d.m.Y"|trans) }}</td>
    </tr>
    <tr>
        <td colspan="4"></td>
    </tr>
    <tr>
        <td style="width: 45%"><u><b>Rechnung</b></u></td>
        <td style="width: 15%"></td>
        <td style="border: 1px solid black; width: 12%">Nr.:</td>
        <td style="border: 1px solid black; width: 28%; text-align: center; ">
            <b>{{ invoice.registration.id }}</b></td>
    </tr>
    <tr>
        <td colspan="4"></td>
    </tr>
    <tr>
        <td colspan="4">29. Internationaler Thüringen Pokal 2020 Bad Blankenburg</td>
    </tr>
