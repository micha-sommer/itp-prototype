{% extends 'base.html.twig' %}

{% block title %}{{ 'title.registration_edit'|trans }}!{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1 class="display-4">{{ 'title.registration_edit'|trans }}</h1>
        <p class="lead">{{ 'description.registration_edit'|trans|raw }}</p>
        <hr class="my-4">
        <div>
            {{ form_start(my_form, {'method': 'POST'}) }}
            {{ form_widget(my_form) }}
            {% if is_granted('ROLE_PREVIOUS_ADMIN') or date(end_date, 'Europe/Paris') > date('now', 'Europe/Paris') %}
                <input class="btn btn-secondary btn-lg float-right" name="back" type="submit" data-toggle="tooltip"
                       data-placement="top"
                       title="{{ 'generic.tooltip.save'|trans }}" value="{{ 'generic.save_and_back'|trans }}"/>
                <input class="btn btn-primary btn-lg float-right mr-1" type="submit"
                       value="{{ 'generic.save'|trans }}"/>
            {% endif %}
            {{ form_end(my_form) }}
        </div>
    </div>
{% endblock %}
