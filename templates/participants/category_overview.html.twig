{% extends 'base.html.twig' %}

{% block title %}{{ 'welcome.title'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="p-5 mb-4 bg-light rounded-3">
            <div class="card">
                <div class="card-header">{{ weightCategory }} ({{ "participants.contestants.data.age-category.#{ ageCategory }"|trans }})</div>
                <ul class="list-group list-group-flush">
                    {% for contestant in contestants %}
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>{{ contestant.lastName|upper }}, {{ contestant.firstName|capitalize }}</div>
                            <span class="badge rounded-pill text-bg-info">
                                {{ contestant.registration.club }}
                            </span>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
